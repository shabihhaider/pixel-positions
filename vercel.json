{
    "version": 2,
    "framework": null,
    "functions": {
        "api/*.php": {
            "runtime": "vercel-php@0.6.0"
        }
    },
    "routes": [
        {
            "src": "/build/(.*)",
            "dest": "/public/build/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ],
    "builds": [
        { "src": "/api/index.php", "use": "vercel-php@0.6.0" },
        { "src": "package.json", "use": "@vercel/node" }
    ],
    "buildCommand": "npm install && npm run build && composer install --no-dev --optimize-autoloader",
    "outputDirectory": "public"
}